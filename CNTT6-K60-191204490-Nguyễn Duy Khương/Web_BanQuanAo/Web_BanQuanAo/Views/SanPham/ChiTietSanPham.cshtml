<script>
    $(document).ready(function () {
        var src_img;
        var src_img_first = $("#list-thumb li:first-child a img").attr('src');

        $(".slider-img #show img").attr('src', src_img_first);
        $('.slider-img #list-thumb li:first-child').addClass('active-img');

        $(".slider-img #list-thumb li a").click(function () {
            src_img = $(this).children('img').attr('src');

            $(".slider-img #show img").attr('src', src_img);

            $('.slider-img #list-thumb li a').parent('li').removeClass('active-img');
            $(this).parent('li').addClass('active-img');
            return false;
        });
    });
</script>

<script>
        $(document).ready(function() {
            var quantity = 0;
            $('.input-group-prepend button.minus').click(function() {
                quantity = $('.number-product').val();
                quantity--;
                if (quantity < 1)
                    quantity = 1;
                $('.number-product').val(quantity);

                $('a#Add-cart').attr('href', '/Cart/AddItem?productId=@Model.MaSP&quantity=' + quantity);
                return false;
            });

            $('.input-group-append button.plus').click(function() {
                quantity = $('.number-product').val();
                quantity++;

                $('.number-product').val(quantity);

                $('a#Add-cart').attr('href', '/Cart/AddItem?productId=@Model.MaSP&quantity=' + quantity);
                return false;
            });
        });
</script>

