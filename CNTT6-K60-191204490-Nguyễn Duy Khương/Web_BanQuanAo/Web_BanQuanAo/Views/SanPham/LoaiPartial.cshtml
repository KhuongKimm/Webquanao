<ul class="navbar-nav mb-2 mb-lg-0 col-12 col-lg-8">
    <li class="nav-item">
        <a class="nav-link" aria-current="page" href="@Url.Action("Index","SanPham")">Trang chủ</a>
    </li>

    @foreach (var item in Model)
    {
        <li class="nav-item dropdown">
            <a class="nav-link" href="@Url.Action("SanPhamTheoLoai","SanPham",new { @MaLoai=item.MaLoai})">
                @item.TenLoai
            </a>
        </li>
    }

    <li class="nav-item">
        <a class="nav-link" href="@Url.Action("GioiThieu","SanPham")">Giới thiệu</a>
    </li>
    <li class="nav-item">
        <a class="nav-link" href="#">Tin tức</a>
    </li>
</ul>

<div class="d-flex gap-4 col-12 col-lg-4">
    @using (Html.BeginForm("KetQuaTimKiem", "TimKiem", FormMethod.Post))
    {
        <div class="input-group">
            @Html.TextBox("txtsearchkey", "", htmlAttributes: new { @class = "form-control ", @placeholder = "Nhập sản phẩm tìm kiếm...", @type = "text" })
            @*<input type="text" class="form-control" placeholder="Bạn tìm kiếm sản phẩm thể thao">*@
            <button class="btn btn-outline-secondary" type="submit" id="button-addon2"><i class="bi bi-search"></i></button>
        </div>
    }
    @Html.Action("partialGioHang", "GioHang")
