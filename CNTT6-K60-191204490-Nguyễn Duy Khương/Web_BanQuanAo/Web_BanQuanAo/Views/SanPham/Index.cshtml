@using Web_BanQuanAo.Models;
@using PagedList.Mvc;
@model PagedList.IPagedList<tblSanPham>
@{
    ViewBag.Title = "index";
    Layout = "~/Views/Shared/_LayoutSP.cshtml";
}
<link href="~/assets/style.css" rel="stylesheet" />
<link href="~/Content/PagedList.css" rel="stylesheet" />

@*-----------------------banner----------------------------*@

<div id="carouselExampleControls" class="carousel slide" data-bs-ride="carousel">
    <div class="carousel-inner">
        <div class="carousel-item active">
            <img src="~/Images/LayoutIndex/abc.jpg" class="d-block w-100" alt="...">
        </div>
        <div class="carousel-item">
            <img src="~/Images/LayoutIndex/topbia.jpg" class="d-block w-100" alt="...">
        </div>
        <div class="carousel-item">
            <img src="~/Images/LayoutIndex/Real.jpg" class="d-block w-100" alt="...">
        </div>
    </div>
    <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Previous</span>
    </button>
    <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Next</span>
    </button>
</div>
@*-----------------------------sanpham----------------------------------*@

<div class="new_product container mt-5" style="background-color: rosybrown" >
    <div class="d-flex justify-content-between mb-4">
        <h3>Sản phẩm nổi bật</h3>
        <a href="#" class="text-decoration-none">Xem tất cả <span>></span></a>
    </div>
    <div class="row gap-xl-5 gap-md-3 justify-content-between">
        @foreach (var item in Model)
        {

            <div class="col-xxl-2 col-lg-3 col-md-3 col-sm-5 col text-center box-shadow-custom py-2 item-product pe-auto position-relative">
                <a href="@Url.Action("ChiTietSanPham","SanPham",new { @MaSp=item.MaSP})" style="text-decoration:none">
                    <img src="@Url.Content("~/Images/LayoutData/"+item.Anh)" class="img-fluid text-center" alt="">

                    <div class="px-2">
                        <h3 class="fs-6 my-3 fw-normal" style="color: #212529">
                            @item.TenSP<br>
                            Màu: @item.MauSac
                        </h3>
                        <div class="d-flex justify-content-between mt-4">
                            <h2 class="fs-5 text-danger" style="color: rgb(220,53,69)">@item.Gia đ</h2>
                            <span style="color: #212529">Số lượng: @item.SoLuong</span>
                        </div>
                    </div>
                </a>
                <div class="position-absolute block opacity-0 d-flex justify-content-center top-50 start-50 translate-middle-x w-100">
                    @using (Html.BeginForm("ThemGioHang", "GioHang", new { @sMaSP = item.MaSP, @strUrl = Request.Url.ToString() }))
                    {
                        <button type="submit" class="btn btn-outline-danger btn-sm me-2" data-bs-toggle="tooltip" title="Thêm vào giỏ hàng!">
                            <i class="bi bi-cart"></i>
                        </button>
                    }

                    @using (Html.BeginForm("ThemGioHang", "GioHang", new { @sMaSP = item.MaSP, @strUrl = Request.Url.ToString() }))
                    {
                        <button type="submit" class="btn btn-danger btn-sm">Mua ngay</button>
                    }
                    @*<button type="button" class="btn btn-danger btn-sm">Mua ngay</button>*@
                </div>
            </div>
        }
    </div>
</div>

<div style="margin-left:660px">
    @Html.PagedListPager(Model, page => Url.Action("Index", "SanPham", new { page = page }))
</div>







